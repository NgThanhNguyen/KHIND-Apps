<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <size android:width="51px" android:height="31px"/>
            <solid android:width="1dp" android:color="#9DD31C"/>
            <corners android:radius="50dp"/>
            <stroke android:width="0.5px" android:color="#E5E5E5"/>
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <size android:width="51px" android:height="31px"/>
            <solid android:width="1dp" android:color="@color/white"/>
            <stroke android:width="1.5dp" android:color="#E5E5E5"/>
            <corners android:radius="50dp"/>
        </shape>
    </item>

</selector>