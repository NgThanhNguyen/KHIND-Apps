<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.Activity_2_Fragment.Setting"
    android:background="#E5E5E5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@color/white"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Do not Disturb"
            android:textSize="17sp"
            android:textColor="@color/pale_black"
            android:gravity="center|left"/>

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:thumb="@drawable/thumb_selector"
            app:track="@drawable/track_selector"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divide_item1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/pale_black"
        app:layout_constraintTop_toBottomOf="@id/item1"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item2"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toBottomOf="@id/divide_item1"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Alarm Sound"
            android:textSize="17sp"
            android:textColor="@color/pale_black"
            android:gravity="center|left"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:thumb="@drawable/thumb_selector"
            app:track="@drawable/track_selector"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divide_item2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/pale_black"
        app:layout_constraintTop_toBottomOf="@id/item2"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item3"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toBottomOf="@id/divide_item2"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@color/white"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Alarm Ringtone"
            android:textSize="17sp"
            android:textColor="@color/pale_black"
            android:gravity="center|left"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@id/choose_ringtone"
            android:text="Beacon"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="10dp"/>

        <Button
            android:id="@+id/choose_ringtone"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/ic_baseline_arrow_forward_ios_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divide_item3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/pale_black"
        app:layout_constraintTop_toBottomOf="@id/item3"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/below_rington"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/divide_item3"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item4"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintTop_toBottomOf="@id/divide_item3"
            android:paddingLeft="20dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Alarm Vibration"
                android:textSize="17sp"
                android:textColor="@color/pale_black"
                android:gravity="center|left"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/divide_item4"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/pale_black"
            app:layout_constraintTop_toBottomOf="@id/item4"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item5"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintTop_toBottomOf="@id/divide_item4"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Setup Schedule"
                android:textSize="17sp"
                android:textColor="@color/pale_black"
                android:gravity="center|left"/>

            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:thumb="@drawable/thumb_selector"
                app:track="@drawable/track_selector"
                tools:ignore="MissingConstraints" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/pale_black"
            app:layout_constraintTop_toBottomOf="@id/item5"/>

        <View
            android:id="@+id/divide_item5"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/pale_black"
            app:layout_constraintTop_toTopOf="@id/item6"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item6"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/item5"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="FAQ"
                android:textSize="17sp"
                android:textColor="@color/pale_black"
                android:gravity="center|left"/>

            <Button
                android:id="@+id/faq_button"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/ic_baseline_arrow_forward_ios_24"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/pale_black"
            app:layout_constraintTop_toTopOf="@id/item6"/>

        <View
            android:id="@+id/divide_item6"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/pale_black"
            app:layout_constraintTop_toBottomOf="@id/item6"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item7"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintTop_toBottomOf="@id/divide_item6"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Private Policy"
                android:textSize="17sp"
                android:textColor="@color/pale_black"
                android:gravity="center|left"/>

            <Button
                android:id="@+id/privacy_button"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/ic_baseline_arrow_forward_ios_24"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/divide_item7"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/pale_black"
            app:layout_constraintTop_toBottomOf="@id/item7"/>

        <View
            android:id="@+id/divide_item8"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/pale_black"
            app:layout_constraintTop_toBottomOf="@id/divide_item7"
            android:layout_marginTop="20dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item8"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintTop_toBottomOf="@id/divide_item8"
            android:paddingLeft="20dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Logout"
                android:textSize="17sp"
                android:gravity="center|left"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/pale_black"
            app:layout_constraintTop_toBottomOf="@id/item8"/>


    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>